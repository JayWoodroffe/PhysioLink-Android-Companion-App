<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <corners android:radius="16dp" />
    <solid android:color="@color/almost_white" />
    <padding
        android:bottom="8dp"
        android:left="16dp"
        android:right="24dp"
        android:top="8dp" />
    <layer-list>
        <item>
            <rotate
                android:fromDegrees="-45"
                android:pivotX="100%"
                android:pivotY="0%">
                <shape android:shape="rectangle">
                    <solid android:color="#E0E0E0" />
                </shape>
            </rotate>
        </item>
    </layer-list>
</shape>
